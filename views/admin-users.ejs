<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Manage Users</title>
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <main class="container">
    <header class="page-header row wrap space-between gap">
      <div>
        <h1>Manage Users</h1>
        <p class="muted">Admin-only user creation.</p>
      </div>
      <a class="button ghost" href="/permits">Back to Dashboard</a>
    </header>

    <% if (error) { %><p class="error"><%= error %></p><% } %>
    <% if (success) { %><p style="color:#166534;font-weight:600;"><%= success %></p><% } %>

    <section class="card">
      <h2 class="section-title">Create User</h2>
      <form method="post" action="/admin/users" class="grid-form">
        <label>Username
          <input name="username" required />
        </label>
        <label>Password
          <input type="password" name="password" required minlength="12" />
          <small class="muted">Min 12 chars with uppercase, lowercase, number, and symbol.</small>
        </label>
        <label>Role
          <select name="role" required>
            <option value="">Select role...</option>
            <% roles.forEach(r => { %><option value="<%= r %>"><%= r %></option><% }) %>
          </select>
        </label>
        <label>Full Name
          <input name="full_name" />
        </label>
        <label>Position
          <input name="position" />
        </label>
        <div class="grid-form__actions">
          <button type="submit" class="button primary">Create User</button>
        </div>
      </form>
    </section>

    <section class="table-card card">
      <div class="table-wrap">
        <table>
          <thead><tr><th>ID</th><th>Username</th><th>Current Role</th><th>Set Role</th><th>Full Name</th><th>Position</th><th>Created</th><th>Update Profile</th><th>Change Password</th></tr></thead>
          <tbody>
            <% users.forEach(u => { %>
              <tr>
                <td><%= u.id %></td>
                <td><%= u.username %></td>
                <td><%= u.role %></td>
                <td>
                  <form method="post" action="/admin/users/<%= u.id %>/role" class="role-select-form">
                    <select name="role" required>
                      <% roles.forEach(roleOption => { %>
                        <option value="<%= roleOption %>" <%= roleOption === u.role ? 'selected' : '' %>><%= roleOption %></option>
                      <% }) %>
                    </select>
                    <button type="submit" class="button">Save</button>
                  </form>
                </td>
                <td><%= u.full_name || '—' %></td>
                <td><%= u.position || '—' %></td>
                <td><%= u.created_at %></td>
                <td>
                  <form method="post" action="/admin/users/<%= u.id %>/profile" class="row gap wrap" onsubmit="return confirm('Update profile for <%= u.username %>?');">
                    <input name="full_name" placeholder="Full name" value="<%= u.full_name || '' %>" />
                    <input name="position" placeholder="Position" value="<%= u.position || '' %>" />
                    <button type="submit" class="button">Save</button>
                  </form>
                </td>
                <td>
                  <form method="post" action="/admin/users/<%= u.id %>/password" class="row gap wrap" onsubmit="return confirm('Change password for <%= u.username %>?');">
                    <input type="password" name="password" placeholder="New password" required minlength="12" />
                    <button type="submit" class="button">Update</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </section>
  </main>
</body>
</html>
